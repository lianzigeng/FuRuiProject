<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:cardCornerRadius="@dimen/dp_40"
            app:cardElevation="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >

        <RelativeLayout
                android:layout_width="800px"
                android:layout_height="800px">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="@dimen/dp_10"
                       android:src="@mipmap/ic_launcher"
                       android:id="@+id/iv_success_logo"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="@string/main_desc"
                      android:layout_below="@id/iv_success_logo"
                      android:id="@+id/tv_success_logo_desc"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerInParent="true"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="带好你的东西"
                      android:layout_alignParentBottom="true"
                      android:layout_marginBottom="@dimen/dp_10"
                      android:id="@+id/tv_success_take"/>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="支付成功"
                      android:layout_above="@id/tv_success_take"
                      android:layout_marginBottom="@dimen/dp_10"
                      android:id="@+id/tv_success_success"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>